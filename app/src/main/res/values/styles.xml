<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--设置窗体无主题-->
        <item name="windowNoTitle">true</item>
        <!--设置窗体切换动画-->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>

        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:fontStyle" tools:ignore="NewApi">normal</item>
    </style>

    <!--Activity进入和退出动画-->
    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Toolbar字体大小设置-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>


    <!--编辑文章界面Style-->
    <style name="EditArticleActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--标识状态栏-->
        <item name="colorPrimaryDark">@color/colorEFEFEF</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!--设置窗体无主题-->
        <item name="windowNoTitle">true</item>
        <!--背景-->
        <item name="android:windowBackground">@color/colorWhite</item>
        <!--设置窗体切换动画-->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>

        <!--透明状态栏 - 19-->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <!--状态栏文字颜色变成黑色，非沉浸式 - 23-->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!--图片浏览界面Style-->
    <style name="ImgVPagerActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--标识状态栏-->
        <item name="colorPrimaryDark">@color/colorBlank</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!--设置窗体无主题-->
        <item name="windowNoTitle">true</item>
        <!--背景-->
        <item name="android:windowBackground">@color/colorBlank</item>
        <!--设置窗体切换动画-->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>

        <!--透明状态栏 - 19-->
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <!--状态栏文字颜色变成黑色，非沉浸式 - 23-->
        <!--<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>-->
    </style>

</resources>
